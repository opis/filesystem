{
    "name": "opis/filesystem",
    "description": "Filesystem abstraction",
    "keywords": ["filesystem", "storage"],
    "homepage": "https://opis.io",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Marius Sarca",
            "email": "marius.sarca@gmail.com"
        },
        {
            "name": "Sorin Sarca",
            "email": "sarca_sorin@hotmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-fileinfo": "*",
        "opis/stream": "2020.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Opis\\FileSystem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Opis\\FileSystem\\Test\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "2020.x-dev"
        }
    }
}
